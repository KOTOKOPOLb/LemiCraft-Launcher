<Window x:Class="LemiCraft_Launcher.GameLogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Логи игры - LemiCraft" 
        Height="600" 
        Width="900"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        MinHeight="400"
        MinWidth="600">

    <Window.Resources>
        <Style x:Key="LogButton" TargetType="Button">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#374151"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleButton" TargetType="Button" BasedOn="{StaticResource LogButton}">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>

    <Border Background="#0F172A" CornerRadius="12" BorderBrush="#374151" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#1E293B" 
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Fill="#22C55E" 
                              Width="18" 
                              Height="18"
                              Margin="0,0,10,0"
                              Data="M9 2C8.44772 2 8 2.44772 8 3V8H3C2.44772 8 2 8.44772 2 9C2 9.55228 2.44772 10 3 10H8V15C8 15.5523 8.44772 16 9 16C9.55228 16 10 15.5523 10 15V10H15C15.5523 10 16 9.55228 16 9C16 8.44772 15.5523 8 15 8H10V3C10 2.44772 9.55228 2 9 2Z" 
                              Stretch="Uniform"/>
                        <TextBlock Text="Логи игры" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        <Border Background="#374151" 
                                CornerRadius="4"
                                Padding="8,3"
                                Margin="12,0,0,0">
                            <TextBlock x:Name="StatusText"
                                       Text="● Запуск..."
                                       FontSize="11"
                                       Foreground="#22C55E"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="−" 
                                Style="{StaticResource TitleButton}"
                                Margin="0,0,4,0"
                                FontSize="20"
                                Click="MinimizeButton_Click"/>
                        <Button Content="×" 
                                Style="{StaticResource TitleButton}"
                                FontSize="20"
                                Click="CloseButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#EF4444"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#DC2626"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Logs Content -->
            <Border Grid.Row="1" Margin="0" Background="#0F172A">
                <ScrollViewer x:Name="LogScrollViewer"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogTextBox"
                            Background="Transparent"
                            Foreground="#E5E7EB"
                            BorderThickness="0"
                            Padding="20"
                            FontFamily="Consolas,Courier New,monospace"
                            FontSize="12"
                            TextWrapping="NoWrap"
                            IsReadOnly="True"
                            VerticalScrollBarVisibility="Disabled"
                            HorizontalScrollBarVisibility="Disabled"/>
                </ScrollViewer>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#1E293B" 
                    CornerRadius="0,0,12,12"
                    Padding="15,10">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="#9CA3AF" 
                              Width="14" 
                              Height="14"
                              Margin="0,0,8,0"
                              VerticalAlignment="Center"
                              Data="M3 3h18v2H3V3zm0 6h18v2H3V9zm0 6h18v2H3v-2z" 
                              Stretch="Uniform"/>
                        <TextBlock x:Name="LineCountText"
                                  Text="Строк: 0"
                                  FontSize="12"
                                  Foreground="#9CA3AF"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center"/>
                        <Border Width="1" 
                                Height="14" 
                                Background="#4B5563"
                                Margin="12,0"/>
                        <Path Fill="#9CA3AF" 
                              Width="14" 
                              Height="14"
                              Margin="0,0,8,0"
                              VerticalAlignment="Center"
                              Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z" 
                              Stretch="Uniform"/>
                        <TextBlock x:Name="TimestampText"
                                  Text="00:00:00"
                                  FontSize="12"
                                  Foreground="#9CA3AF"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource LogButton}"
                               Margin="0,0,8,0"
                               Click="ScrollToBottom_Click">
                            <StackPanel Orientation="Horizontal">
                                <Path Fill="White" 
                                      Width="14" 
                                      Height="14"
                                      Margin="0,0,6,0"
                                      VerticalAlignment="Center"
                                      Data="M7 10L12 15L17 10H7Z" 
                                      Stretch="Uniform"/>
                                <TextBlock Text="Прокрутить вниз" 
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource LogButton}"
                               Margin="0,0,8,0"
                               Click="CopyAll_Click">
                            <StackPanel Orientation="Horizontal">
                                <Path Fill="White" 
                                      Width="14" 
                                      Height="14"
                                      Margin="0,0,6,0"
                                      VerticalAlignment="Center"
                                      Data="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z" 
                                      Stretch="Uniform"/>
                                <TextBlock Text="Копировать" 
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource LogButton}"
                               Click="ClearLogs_Click">
                            <StackPanel Orientation="Horizontal">
                                <Path Fill="White" 
                                      Width="14" 
                                      Height="14"
                                      Margin="0,0,6,0"
                                      VerticalAlignment="Center"
                                      Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" 
                                      Stretch="Uniform"/>
                                <TextBlock Text="Очистить" 
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
