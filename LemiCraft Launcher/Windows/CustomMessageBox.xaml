<Window x:Class="LemiCraft_Launcher.Windows.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message"
        Height="Auto"
        Width="500"
        SizeToContent="Height"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Border x:Name="RootBorder"
            Background="#0F172A"
            CornerRadius="12"
            BorderBrush="#374151"
            BorderThickness="1"
            RenderTransformOrigin="0.5,0.5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="#1E293B"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid Margin="20,14">
                    <TextBlock x:Name="TitleText"
                               Text="Сообщение"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <Button Content="×"
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Right"
                            FontSize="18"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#374151"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="24,20,24,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="IconBorder"
                        Grid.Column="0"
                        Width="40"
                        Height="40"
                        Background="#3B82F6"
                        CornerRadius="20"
                        Margin="0,0,16,0"
                        VerticalAlignment="Top">
                    <TextBlock x:Name="IconText"
                               Text="ℹ️"
                               FontSize="20"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <TextBlock x:Name="MessageText"
                           Grid.Column="1"
                           Text="Сообщение"
                           FontSize="14"
                           Foreground="#E5E7EB"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           LineHeight="20"
                           MaxWidth="400"/>
            </Grid>

            <Grid Grid.Row="2"
                  Margin="24,0,24,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="YesButton"
                        Grid.Column="1"
                        Content="Да"
                        Height="38"
                        MinWidth="100"
                        Padding="20,0"
                        Margin="0,0,8,0"
                        Background="#22C55E"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="YesButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#16A34A"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="NoButton"
                        Grid.Column="2"
                        Content="Нет"
                        Height="38"
                        MinWidth="100"
                        Padding="20,0"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="#374151"
                        BorderThickness="1"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="NoButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#374151"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="OKButton"
                        Grid.Column="2"
                        Content="OK"
                        Height="38"
                        MinWidth="100"
                        Padding="20,0"
                        Background="#22C55E"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="OKButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#16A34A"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
