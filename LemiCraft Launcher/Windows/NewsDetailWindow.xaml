<Window x:Class="LemiCraft_Launcher.Windows.NewsDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новость"
        Height="700"
        Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="NewsScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="Transparent" CornerRadius="3"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border Background="#374151" CornerRadius="3"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MarkdownParagraph" TargetType="Paragraph">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="LineHeight" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="MarkdownHeader1" TargetType="Paragraph">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,24,0,16"/>
        </Style>

        <Style x:Key="MarkdownHeader2" TargetType="Paragraph">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,20,0,12"/>
        </Style>

        <Style x:Key="MarkdownHeader3" TargetType="Paragraph">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <Style x:Key="MarkdownCode" TargetType="Paragraph">
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#E6EEF3"/>
            <Setter Property="Background" Value="#071020"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,8,0,16"/>
        </Style>

        <Style x:Key="MarkdownBlockquote" TargetType="Paragraph">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="3,0,0,0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,8,0,16"/>
        </Style>
    </Window.Resources>

    <Border x:Name="RootBorder"
            Background="#0F172A"
            CornerRadius="16"
            BorderBrush="#374151"
            BorderThickness="1"
            RenderTransformOrigin="0.5,0.5"
            ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="#1E293B"
                    CornerRadius="16,16,0,0"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid Margin="24,16">
                    <TextBlock Text="Новость"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <Button Content="×"
                            x:Name="CloseButton"
                            Width="32"
                            Height="32"
                            HorizontalAlignment="Right"
                            FontSize="20"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#374151"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Border CornerRadius="0,0,16,16" ClipToBounds="True" Margin="0">
                <ScrollViewer x:Name="DetailScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              ScrollChanged="DetailScrollViewer_ScrollChanged"
                              Padding="0,0,12,40"
                              PreviewMouseWheel="DetailScrollViewer_PreviewMouseWheel">

                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource NewsScrollBar}" />
                    </ScrollViewer.Resources>

                    <StackPanel Margin="24,20,24,24">
                        <Border x:Name="ImageContainer"
                                Height="320"
                                CornerRadius="12"
                                Margin="0,0,0,20"
                                Visibility="Collapsed"
                                Loaded="ImageContainer_Loaded"
                                SizeChanged="ImageContainer_SizeChanged">
                            <Grid>
                                <Image x:Name="NewsImage"
                                       Stretch="Uniform"
                                       StretchDirection="Both"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       MaxWidth="{Binding ActualWidth, ElementName=ImageContainer}"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <Rectangle VerticalAlignment="Bottom"
                                           Height="100"
                                           IsHitTestVisible="False">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#000F172A" Offset="0"/>
                                            <GradientStop Color="#CC0F172A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </Border>

                        <Grid Margin="0,0,0,16">
                            <Border x:Name="CategoryBadge"
                                    Background="#22C55E"
                                    CornerRadius="6"
                                    Padding="12,6"
                                    HorizontalAlignment="Left">
                                <TextBlock x:Name="CategoryText"
                                          Text="Общее"
                                          FontSize="12"
                                          FontWeight="Bold"
                                          Foreground="White"/>
                            </Border>

                            <TextBlock x:Name="DateText"
                                      Text="01.01.2024"
                                      FontSize="13"
                                      Foreground="#6B7280"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock x:Name="TitleText"
                                  Text="Заголовок новости"
                                  FontSize="26"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  TextWrapping="Wrap"
                                  LineHeight="36"
                                  Margin="0,0,0,24"/>

                        <Border Background="Transparent" 
                                CornerRadius="8" 
                                BorderThickness="0" 
                                Margin="0,0,0,24">
                            <FlowDocumentScrollViewer x:Name="MarkdownViewer"
                                                      VerticalScrollBarVisibility="Disabled"
                                                      Background="Transparent"
                                                      BorderThickness="0"
                                                      IsToolBarVisible="False"
                                                      Focusable="False"
                                                      IsHitTestVisible="False"
                                                      Cursor="Arrow"
                                                      PreviewMouseWheel="MarkdownViewer_PreviewMouseWheel">
                                <FlowDocument x:Name="MarkdownDocument"
                                              Background="Transparent"
                                              PagePadding="0"
                                              FontFamily="Segoe UI, Arial"
                                              FontSize="14"
                                              Foreground="#E5E7EB"
                                              LineHeight="24"/>
                            </FlowDocumentScrollViewer>
                        </Border>

                        <Border Height="1"
                                Background="#374151"
                                Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" 
                                        Grid.Column="0" 
                                        VerticalAlignment="Center">
                                <Border Width="44" 
                                        Height="44"
                                        CornerRadius="22"
                                        Margin="0,0,12,0">
                                    <Border.Clip>
                                        <EllipseGeometry Center="22,22" RadiusX="22" RadiusY="22"/>
                                    </Border.Clip>
                                    <Image x:Name="AuthorAvatar"
                                           Stretch="UniformToFill"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Name="AuthorText"
                                              Text="Автор"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="White"/>
                                    <TextBlock x:Name="RoleText"
                                              Text="Администратор"
                                              FontSize="12"
                                              Foreground="#6B7280"
                                              Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>

                                <Button Grid.Column="1"
                                        Content="Открыть в Discord"
                                        HorizontalAlignment="Right"
                                        Height="48"
                                        MinWidth="200"
                                        Padding="24,0"
                                        Background="#5865F2"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Cursor="Hand"
                                        Click="OpenDiscord_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#4752C4"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <Border x:Name="TopFade"
                        VerticalAlignment="Top"
                        Height="40"
                        Opacity="0"
                        IsHitTestVisible="False"
                        Margin="24,0,52,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FF0F172A" Offset="0"/>
                            <GradientStop Color="#000F172A" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <Border x:Name="BottomFade"
                        VerticalAlignment="Bottom"
                        Height="40"
                        Opacity="0"
                        IsHitTestVisible="False"
                        Margin="24,0,52,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                            <GradientStop Color="#FF0F172A" Offset="0"/>
                            <GradientStop Color="#000F172A" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
