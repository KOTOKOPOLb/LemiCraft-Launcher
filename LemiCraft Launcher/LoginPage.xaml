<Page x:Class="LemiCraft_Launcher.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utils="clr-namespace:LemiCraft_Launcher.Utils"
      Background="Transparent">

    <Page.Resources>
        <Storyboard x:Key="FadeOutContent">
            <DoubleAnimation Storyboard.TargetName="MainContent"
                             Storyboard.TargetProperty="Opacity"
                             To="0"
                             Duration="0:0:0.15"/>
        </Storyboard>

        <Storyboard x:Key="FadeInContent">
            <DoubleAnimation Storyboard.TargetName="MainContent"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.18"/>
        </Storyboard>

        <utils:TextEmptyToVisibility x:Key="TextEmptyToVisibility"/>

        <Style x:Key="ProviderButton" TargetType="Button">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="16,12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#374151"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProviderButtonActive" TargetType="Button" BasedOn="{StaticResource ProviderButton}">
            <Setter Property="Background" Value="#22C55E"/>
            <Setter Property="BorderBrush" Value="#22C55E"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="10"
                                Padding="16,12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#16A34A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#16A34A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <Button Content="← Назад"
                    Style="{StaticResource SecondaryButton}"
                    Click="BackButton_Click"
                    Padding="12,8"
                    Margin="0,0,16,0"/>
            <TextBlock Text="🔐 Авторизация"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <Border x:Name="MainContent"
                Grid.Row="1"
                Background="#1E293B"
                CornerRadius="14"
                Padding="40"
                Width="540"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="1">

            <Grid>
                <StackPanel x:Name="ProviderSelection" Visibility="Visible">
                    <TextBlock Text="Выберите способ входа"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,28"/>

                    <TextBlock Text="Система авторизации"
                               FontSize="12"
                               FontWeight="Medium"
                               Foreground="#9CA3AF"
                               Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="MicrosoftBtn"
                                Grid.Column="0"
                                Style="{StaticResource ProviderButtonActive}"
                                Click="MicrosoftSelect_Click"
                                Height="66">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                    <TextBlock Text="⚡" FontSize="22" Margin="0,0,8,0"/>
                                    <TextBlock Text="Microsoft" 
                                             FontSize="16" 
                                             FontWeight="SemiBold"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <Button x:Name="ElyBtn"
                                Grid.Column="2"
                                Style="{StaticResource ProviderButton}"
                                Click="ElySelect_Click"
                                Height="66">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                    <TextBlock Text="🔷" FontSize="22" Margin="0,0,8,0"/>
                                    <TextBlock Text="Ely.by" 
                                             FontSize="16" 
                                             FontWeight="SemiBold"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <TextBlock Text="Способ входа"
                               FontSize="12"
                               FontWeight="Medium"
                               Foreground="#9CA3AF"
                               Margin="0,0,0,10"/>

                    <Button Click="BrowserLogin_Click"
                            Margin="0,0,0,12"
                            Height="64"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#22C55E"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="10"
                                                    Padding="20,14">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                             Text="🌐" 
                                                             FontSize="24"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,12,0"/>

                                                    <StackPanel Grid.Column="1" 
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Left">
                                                        <TextBlock Text="Войти через браузер"
                                                                 FontSize="15"
                                                                 FontWeight="SemiBold"
                                                                 Foreground="White"/>
                                                        <TextBlock Text="Рекомендуется • Безопасно"
                                                                 FontSize="11"
                                                                 Foreground="#E0FFE0"
                                                                 Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#16A34A"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Click="ShowCredentialsForm_Click"
                            Height="64"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#1E293B"/>
                                <Setter Property="BorderBrush" Value="#374151"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="10"
                                                    Padding="20,14">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                             Text="🔑" 
                                                             FontSize="24"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,12,0"/>

                                                    <StackPanel Grid.Column="1" 
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Left">
                                                        <TextBlock Text="Войти через логин и пароль"
                                                                 FontSize="15"
                                                                 FontWeight="SemiBold"
                                                                 Foreground="White"/>
                                                        <TextBlock Text="Классический способ"
                                                                 FontSize="11"
                                                                 Foreground="#9CA3AF"
                                                                 Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#374151"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Grid Margin="0,24,0,16">
                        <Border Height="1" Background="#374151"/>
                        <TextBlock Text="или"
                                  FontSize="12"
                                  Foreground="#6B7280"
                                  Background="#1E293B"
                                  Padding="12,0"
                                  HorizontalAlignment="Center"/>
                    </Grid>

                    <TextBlock HorizontalAlignment="Center">
                        <Run Text="Нет аккаунта?" Foreground="#9CA3AF" FontSize="13"/>
                        <Run Text=" "/>
                        <Hyperlink Foreground="#22C55E"
                                   TextDecorations="None"
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   Click="RegisterLink_Click">
                            Зарегистрироваться
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

                <StackPanel x:Name="CredentialsForm" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,24">
                        <TextBlock Text="Вход через "
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock x:Name="CredentialsProviderText"
                                   Text="Microsoft"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"/>
                    </StackPanel>

                    <TextBlock Text="📧 Email или логин"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="#9CA3AF"
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,16">
                        <TextBox x:Name="LoginTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 Height="48"
                                 FontSize="14"
                                 Padding="14,12"/>
                        <TextBlock Text="Введите email или ник"
                                   IsHitTestVisible="False"
                                   Foreground="#6B7280"
                                   FontSize="14"
                                   Margin="16,0,0,0"
                                   VerticalAlignment="Center">
                            <TextBlock.Visibility>
                                <MultiBinding Converter="{StaticResource TextEmptyToVisibility}">
                                    <Binding ElementName="LoginTextBox" Path="Text"/>
                                </MultiBinding>
                            </TextBlock.Visibility>
                        </TextBlock>
                    </Grid>

                    <TextBlock Text="🔒 Пароль"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="#9CA3AF"
                               Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Style="{StaticResource ModernPasswordBox}"
                                 Height="48"
                                 FontSize="14"
                                 Margin="0,0,0,10"
                                 Padding="14,12"/>

                    <StackPanel x:Name="LoadingIndicator"
                               Visibility="Collapsed"
                               Orientation="Horizontal"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,16">
                        <TextBlock Text="⏳"
                                  FontSize="18"
                                  Margin="0,0,10,0">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="LoadingRotation" CenterX="9" CenterY="9"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360"
                                                           Duration="0:0:2"
                                                           RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                        <TextBlock Text="Авторизация..."
                                  FontSize="14"
                                  Foreground="#9CA3AF"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border x:Name="ErrorPanel"
                           Visibility="Collapsed"
                           Background="#7F1D1D"
                           BorderBrush="#EF4444"
                           BorderThickness="2"
                           CornerRadius="8"
                           Padding="14,10"
                           Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️"
                                      FontSize="18"
                                      Margin="0,0,10,0"
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="ErrorText"
                                      Text="Ошибка авторизации"
                                      FontSize="13"
                                      Foreground="White"
                                      TextWrapping="Wrap"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="← Назад"
                                Style="{StaticResource SecondaryButton}"
                                Height="50"
                                Click="BackToSelection_Click"/>

                        <Button Grid.Column="2"
                                Content="Войти"
                                Style="{StaticResource ModernButton}"
                                Height="50"
                                FontSize="15"
                                Click="CredentialsLogin_Click"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
